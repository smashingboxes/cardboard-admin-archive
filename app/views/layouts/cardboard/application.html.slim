doctype html
/[if IE 8]
  html class="lt-ie9" lang=I18n.locale
/! [if gt IE 8]><!
html lang=I18n.locale
  /! <![endif]

  head
    = render 'layouts/cardboard/head', title: 'Dashboard'
    = yield :head

  body(id="#{params[:controller].parameterize('_')}")


    #main_topbar= render 'layouts/cardboard/main_topbar'

    #main_content
      #main_sidebar= render 'layouts/cardboard/main_sidebar'

      #content_sidebar class="#{'toggle' if params[:controller] =~ /pages/}"
        #pages_sidebar= render 'cardboard/pages/sidebar'

      #content_header
        = yield :content_header

      #content.container-fluid(data-pjax-container  class="#{'toggle' if params[:controller] =~ /pages/}")
        = render 'layouts/cardboard/flash_message'
        = yield

      
    = yield :javascript
